<div class="container">
  <div class="row justify-content-around">
    <div class="playlist-list col-lg-5">
      <h3>Hi <%= current_user.user_name %>, here are your playlists</h3>
      <hr class="highlight-line">
      <% @playlists.each do |playlist| %>
        <div class="playlist-card">
          <%= playlist.name %>
          <%= link_to playlist_path(playlist), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div> <!-- end of class playlist-card -->
      <% end %> <!-- end of iterations through playlists -->
